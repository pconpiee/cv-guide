<div class="toast" id="toast">‚úì Saved</div>

<script>
// ‚îÄ‚îÄ QUESTION ACCORDION
function toggleQ(header) {
  const item = header.parentElement;
  item.classList.toggle('open');
}

// ‚îÄ‚îÄ STORY STORAGE
let stories = JSON.parse(localStorage.getItem('pat_ip_stories') || '[]');
let currentIdx = 0;

function storyFields() {
  return ['st_title','st_s','st_t','st_a','st_r','st_l'];
}

function loadStory(idx) {
  currentIdx = idx;
  const s = stories[idx] || {};
  storyFields().forEach(f => {
    const el = document.getElementById(f);
    if(el) el.value = s[f] || '';
  });
  document.getElementById('active-story-num').textContent = idx + 1;
  const title = s.st_title || 'Enter a title below';
  document.getElementById('active-story-theme').textContent = title.substring(0,40) + (title.length > 40 ? '...' : '');
  renderNav();
}

function saveStory() {
  const s = {};
  storyFields().forEach(f => { s[f] = document.getElementById(f)?.value || ''; });
  stories[currentIdx] = s;
  localStorage.setItem('pat_ip_stories', JSON.stringify(stories));
  document.getElementById('story-count').textContent = stories.filter(x=>x.st_title).length;
  renderNav();
  showToast();
}

function newStory() {
  saveStory();
  if(stories.length >= 10) return;
  stories.push({});
  currentIdx = stories.length - 1;
  storyFields().forEach(f => { const el = document.getElementById(f); if(el) el.value = ''; });
  document.getElementById('active-story-num').textContent = currentIdx + 1;
  document.getElementById('active-story-theme').textContent = 'Enter a title below';
  renderNav();
}

function renderNav() {
  const nav = document.getElementById('story-nav');
  nav.innerHTML = stories.map((s,i) =>
    `<button onclick="saveStory();loadStory(${i})" style="width:28px;height:28px;border-radius:50%;border:1.5px solid ${i===currentIdx?'var(--electric)':'var(--border)'};background:${i===currentIdx?'var(--electric-dim)':'var(--panel-mid)'};color:${i===currentIdx?'var(--electric-light)':'var(--text-soft)'};font-family:'Syne',sans-serif;font-size:0.72rem;font-weight:700;cursor:pointer;">${i+1}</button>`
  ).join('');
}

// ‚îÄ‚îÄ GENERAL SAVE
function save() {
  clearTimeout(window._saveTimer);
  window._saveTimer = setTimeout(() => {
    const misc = {};
    ['w_q_list','w_q_map','w_q_ask'].forEach(id => {
      const el = document.getElementById(id);
      if(el) misc[id] = el.value;
    });
    // save checkboxes
    const checks = [];
    document.querySelectorAll('.cbox').forEach(b => checks.push(b.classList.contains('on')));
    misc['_checks'] = checks;
    localStorage.setItem('pat_ip_misc', JSON.stringify(misc));
    updatePct();
    showToast();
  }, 700);
}

// ‚îÄ‚îÄ CHECKBOXES
function chk(el) {
  el.classList.toggle('on');
  el.textContent = el.classList.contains('on') ? '‚úì' : '';
  save();
}

// ‚îÄ‚îÄ PROGRESS %
function updatePct() {
  const boxes = document.querySelectorAll('.cbox');
  const on = document.querySelectorAll('.cbox.on').length;
  const pct = boxes.length ? Math.round((on / boxes.length) * 100) : 0;
  document.getElementById('check-pct').textContent = pct + '%';
}

// ‚îÄ‚îÄ TOAST
function showToast() {
  const t = document.getElementById('toast');
  t.classList.add('show');
  setTimeout(() => t.classList.remove('show'), 1600);
}

// ‚îÄ‚îÄ LOAD ON INIT
function loadAll() {
  if(stories.length === 0) stories.push({});
  loadStory(0);
  document.getElementById('story-count').textContent = stories.filter(x=>x.st_title).length;
  try {
    const misc = JSON.parse(localStorage.getItem('pat_ip_misc') || '{}');
    ['w_q_list','w_q_map','w_q_ask'].forEach(id => {
      const el = document.getElementById(id);
      if(el && misc[id]) el.value = misc[id];
    });
    const checks = misc['_checks'] || [];
    const boxes = document.querySelectorAll('.cbox');
    checks.forEach((on,i) => {
      if(on && boxes[i]) { boxes[i].classList.add('on'); boxes[i].textContent='‚úì'; }
    });
  } catch(e) {}
  updatePct();
}
loadAll();
</script>
</body>
</html>
